{
  "description": "Railgun security enforcement hooks",
  "hooks": {
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/pre-tool-use.sh",
            "timeout": 5,
            "statusMessage": "Checking policy..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/post-tool-use.sh",
            "async": true,
            "timeout": 10
          }
        ]
      }
    ]
  }
}
